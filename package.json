{
  "name": "portal-fusion",
  "version": "1.0.0",
  "displayName": "Portal Fusion",
  "description": "Seamless computing, unified - Cross-platform PC to Mac application",
  "private": true,
  "homepage": "https://portalfusion.app",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/portal-fusion.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/portal-fusion/issues"
  },
  "author": {
    "name": "Your Name",
    "email": "contact@portalfusion.app",
    "url": "https://portalfusion.app"
  },
  "license": "MIT",
  "keywords": [
    "portal-fusion",
    "cross-platform",
    "pc-to-mac",
    "file-transfer",
    "clipboard-sync", 
    "screen-share",
    "remote-control",
    "unified-workspace",
    "device-bridge",
    "seamless-computing",
    "productivity"
  ],
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "start": "turbo run start",
    "lint": "turbo run lint",
    "clean": "turbo run clean",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "electron:dev": "turbo run electron:dev --filter=@portal-fusion/desktop",
    "electron:build": "turbo run electron:build --filter=@portal-fusion/desktop",
    "web:dev": "turbo run dev --filter=@portal-fusion/web",
    "server:dev": "turbo run dev --filter=@portal-fusion/server"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "prettier": "^3.1.0",
    "turbo": "^1.11.0",
    "typescript": "^5.3.0"
  },
  "packageManager": "npm@10.2.0",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=10.0.0"
  }
}
